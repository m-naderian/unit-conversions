{
    "name": "mnaderian/unit-conversions",
    "description": "Perform unit conversions in PHP",
    "keywords": [
        "mnaderian",
        "unit-conversions"
    ],
    "homepage": "https://github.com/mnaderian/unit-conversions",
    "license": "MIT",
    "authors": [
        {
            "name": "Mahdi Naderian",
            "email": "naderian.mahdi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Mnaderian\\UnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mnaderian\\UnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
